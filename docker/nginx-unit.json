{
  "listeners": {
    "0.0.0.0:8080": {
      "pass": "routes/redirect"
    },
    "[::]:8080": {
      "pass": "routes/redirect"
    },
    "0.0.0.0:8443": {
      "pass": "routes/main",
      "tls": {
        "certificate": "bundle"
      }
    },
    "[::]:8443": {
      "pass": "routes/main",
      "tls": {
        "certificate": "bundle"
      }
    },
    "0.0.0.0:8081": {
      "pass": "routes/status"
    },
    "[::]:8081": {
      "pass": "routes/status"
    }
  },
  "routes": {
    "redirect": [
      {
        "action": {
          "return": 301,
          "location": "https://${host}:8443${request_uri}"
        }
      }
    ],
    "main": [
      {
        "match": {
          "uri": "/static/*"
        },
        "action": {
          "share": "/opt/netbox/netbox${uri}"
        }
      },
      {
        "action": {
          "pass": "applications/netbox"
        }
      }
    ],
    "status": [
      {
        "match": {
          "uri": "/status/*"
        },
        "action": {
          "proxy": "http://unix:/opt/unit/unit.sock"
        }
      }
    ]
  },
  "applications": {
    "netbox": {
      "type": "python 3",
      "path": "/opt/netbox/netbox/",
      "module": "netbox.wsgi",
      "home": "/opt/netbox/venv",
      "processes": {
        "max": 4,
        "spare": 1,
        "idle_timeout": 120
      }
    }
  },
  "access_log": "/dev/stdout"
}
